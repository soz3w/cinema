        </div>
    </div>
</div>

<div class="col-md-8">
    <div class="panel panel-success">

        <div class="panel-heading">
            <a href="#itemContent4" class="panel-title"><span class="glyphicon glyphicon-comment"></span> Commentaires</a>
        </div>
        <ul class="nav nav-tabs">
            <li class="active"><a href="#comA" data-toggle="tab">Commentaires actives</a></li>
            <li><a href="#comE" data-toggle="tab">Commentaires encours de validation</a></li>
            <li><a href="#comI" data-toggle="tab">Commentaires inactifs</a></li>
        </ul>
        <div class="tab-content">
            {{ render(controller('CinemaBoBundle:Comments:getComments')) }}
        </div>
    </div>
</div>
<div class="col-md-8">
        <div class="panel panel-success">

            <div class="panel-heading">
                <a href="#itemContent4" class="panel-title"><span class="glyphicon glyphicon-dashboard"></span> Séances</a>
            </div>

            <div class="panel-body">
                {{ render(controller('CinemaBoBundle:Sessions:getSessions')) }}
            </div>
        </div>
</div>

    {{ render(controller('CinemaBoBundle:Categories:getCategoriesMoviesChart')) }}

