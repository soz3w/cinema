{% extends "CinemaBoBundle::layout.html.twig" %}
{% block content %}
<div class="col-md-8">
    <div class="panel panel-warning">
        <div class='panel-body'>
            <div>
                  <h2>{{  actor.firstname ~" " ~actor.lastname }}</h2>


            </div>
            <p>
                    <img class="img-thumbnail" src="{{ actor.image }}">
            </p>
            {% for movie in actor.movies %}
                <div class="col-md-4">
                    <p>
                        <a  href="{{ path('cinema_bo_movie',{'id':movie.id})}}">
                            {{ movie.title }}
                        </a>
                    </p>
                    <p>
                        <img class="img-thumbnail" src="{{ movie.image }}">
                    </p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

